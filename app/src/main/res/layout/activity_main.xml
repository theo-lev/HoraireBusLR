<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:id="@+id/layout_time"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toTopOf="@id/layout_date"
      android:gravity="center"
      android:padding="2pt">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/txt_timePicker"
          tools:text="@tools:sample/date/hhmm"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_timePicker"
        android:text="@string/btn_timePicker"/>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:id="@+id/layout_date"
      app:layout_constraintTop_toBottomOf="@id/layout_time"
      android:gravity="center"
      android:padding="2pt">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_datePicker"
        tools:text="@tools:sample/date/ddmmyy"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_datePicker"
        android:text="@string/btn_datePicker"/>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/layout_date"
      android:gravity="center"
      android:id="@+id/layout_stations_spinner"
      android:padding="2pt">
      <Spinner
          android:layout_width="50pt"
          android:layout_height="wrap_content"
          android:id="@+id/stations_spinner"/>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/layout_stations_spinner"
      android:gravity="center"
      android:padding="2pt">
    <Spinner
        android:layout_width="50pt"
        android:layout_height="wrap_content"
        android:id="@+id/stations_term_spinner"
        android:visibility="gone"/>
  </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>